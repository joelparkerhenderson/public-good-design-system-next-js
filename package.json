{
  "name": "@public-good/design-system",
  "version": "0.1.0",
  "description": "Public Good Design System - A modern, accessible React component library converted from NHS UK Design System",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "nextjs",
    "accessibility",
    "components",
    "public-good"
  ],
  "author": "Public Good Contributors",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/styled-components": "^5.1.34",
    "eslint-config-next": "^15.4.7",
    "next": "^15.4.7",
    "next-intl": "^4.3.5",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "styled-components": "^6.1.19",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/public-good/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/public-good/design-system/issues"
  },
  "homepage": "https://public-good-design-system.vercel.app",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "vitest": "^3.2.4"
  }
